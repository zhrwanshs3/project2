<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71A13F"
    android:backgroundTint="#70A03F"
    tools:context=".SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="507dp"
            android:layout_height="926dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:src="@drawable/screenshot_2025_04_19_151220"
            app:layout_constraintBaseline_toBaselineOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView16"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="@+id/imageView16"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="288dp"
            android:layout_height="135dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="53dp"
            android:src="@drawable/__2025_02_05_104606"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BacktoHome"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/BacktoHome"
            android:layout_width="57dp"
            android:layout_height="62dp"
            android:layout_marginTop="67dp"
            android:layout_marginBottom="89dp"
            android:src="@drawable/screenshot_2025_04_19_134312"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.693"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="148dp"
            android:text="موقعنا الإلكتروني هو منصة متخصصة في العناية بالبشرة، مصمم لتقديم أفضل المنتجات والنصائح التي تساعد المستخدمين على العناية ببشرتهم بطريقة فعالة وآمنة. نهدف إلى توفير تجربة تسوق سهلة، موثوقة، ومخصصة لتلبية احتياجات كل نوع بشرة.  ✨ ماذا يقدم الموقع؟ 	•	🧴 مجموعة مختارة من منتجات العناية بالبشرة من علامات تجارية موثوقة. 	•	🧼 تفاصيل دقيقة لكل منتج تشمل المكونات، طريقة الاستخدام، ونوع البشرة المناسب له. 	•	🧑‍⚕ نصائح وإرشادات من مختصين لمساعدتك في اختيار الروتين المناسب لبشرتك. 	•	🛒 واجهة شراء سلسة تتيح لك إضافة المنتجات إلى السلة، متابعة الطلب، والدفع بطريقة آمنة. 	•	📱 تصميم متجاوب يعمل بكفاءة على الهاتف، التابلت، والكمبيوتر. "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView16"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
